<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
  </head>
  <body>
    <%- include('partials/header') %>
    <h2>Sign Up</h2>
    <form action="" method="post">
      <label for="username">Username</label>
      <input
        type="text"
        id="username"
        name="username"
        placeholder="username"
        value="<%= data.username %>"
      />
      <label for="email">Email</label>
      <input
        type="text"
        id="email"
        name="email"
        placeholder="email@email.com"
        value="<%= data.email %>"
      />
      <label for="password">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        value="<%= data.password %>"
      />
      <button>Sign Up</button>
    </form>

    <div>
      <% if (locals.errors) {%>
      <ul>
        <% locals.errors.forEach((error) => {%>
        <li><%= error.msg %></li>
        <% }) %>
      </ul>
      <% } %>
    </div>
  </body>
</html>
