<%- include('partials/head', {title: "Sign-up"}) %>
<body>
  <%- include('partials/header') %>
  <h2>Sign Up</h2>
  <form action="" method="post">
    <label for="username">Username</label>
    <input
      type="text"
      id="username"
      name="username"
      placeholder="username"
      value="<%= data.username %>"
    />
    <label for="email">Email</label>
    <input
      type="text"
      id="email"
      name="email"
      placeholder="email@email.com"
      value="<%= data.email %>"
    />
    <label for="password">Password</label>
    <input
      type="password"
      id="password"
      name="password"
      value="<%= data.password %>"
    />
    <button>Sign Up</button>
  </form>

  <div>
    <% if (locals.errors) {%>
    <ul>
      <% locals.errors.forEach((error) => {%>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %>
  </div>
</body>
