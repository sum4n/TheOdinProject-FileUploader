<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Uploader</title>
  </head>
  <body>
    <% if (locals.currentUser) {%>
    <h1><%= currentUser.username %></h1>

    <!-- Folder link bread crumbs -->
    <div>
      <h2>
        <% if (locals.parents !== null) {%> <% parents.forEach((parent) => { %>
        <a href="<%= parent.id %>"><%= parent.name %> ></a>
        <% }) %> <% } %>
        <a href="<%= locals.directory.id %>"><%= locals.directory.name %> :</a>
      </h2>
    </div>

    <p>
      Files: <% locals.directory.files.forEach((file) => { %>
      <a href="<%= file.path %>"><%= file.name %></a> <% }) %>
    </p>

    <p>
      Directories: <% locals.directory.subDirectories.forEach((dir) => { %>
      <a href="<%= dir.id %>"><%= dir.name %></a> <% }) %>
    </p>
    <!-- <a href="/upload-file">Upload a file</a> -->
    <div>
      <form
        action="/upload-file/<%= locals.directory.id %>"
        method="POST"
        enctype="multipart/form-data"
      >
        <input type="file" name="uploaded-file" id="uploaded-file" />

        <button>Upload</button>
      </form>
    </div>

    <div>
      <form action="/create-folder/<%= locals.directory.id %>" method="POST">
        <label for="newFolder">New folder:</label>
        <input type="text" name="newFolder" id="newFolder" required />
        <button>Create</button>
      </form>
    </div>

    <% if (locals.message) {%>
    <p><%= locals.message %></p>
    <% } %>
    <div>
      <a href="/log-out">LOG OUT</a>
    </div>
    <% } else { %>
    <h1>Welcome to The Odin Project - File Uploader!</h1>
    <h2>Please log in</h2>
    <form action="/log-in" method="POST">
      <label for="username">Username</label>
      <input type="text" id="username" name="username" placeholder="username" />
      <label for="password">Password</label>
      <input type="password" id="password" name="password" />
      <button>Log In</button>
    </form>

    <p>New user? <a href="/sign-up">Sign up</a></p>

    <% } %>
  </body>
</html>
